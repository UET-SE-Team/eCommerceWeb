<!DOCTYPE html>
<html>
<title>Home Page</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<style>
    .centered-form {
        display: flex;
        justify-content: center;
        padding-top: 100px;
    }

    .input-group {
        margin-bottom: 10px;
    }

    .input-group label {
        display: inline-block;
        width: 100px;
        text-align: right;
        margin-right: 10px;
    }

    .input-group input {
        width: 200px;
    }
</style>

<body>

    <div class="Tester">
        <h2>Hoverable Table</h2>

        <table class="w3-table-all w3-hoverable">
            <thead>
                <tr class="w3-light-grey">
                    <th>Avatar</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <% for(let i=0; i < userData.length; i++) { %>
                <tr>
                    <td>
                        <img src="<%= userData[i].avatarLink %>" alt="img" width="50" height="auto">
                    </td>
                    <td>
                        <%= userData[i].firstName %>
                    </td>
                    <td>
                        <%= userData[i].lastName %>
                    </td>
                    <td>
                        <%= userData[i].email %>
                    </td>
                    <td>
                        <button type="button">Detail</button>
                        <form action="/edit-user/<%= userData[i].userID %>" , method="GET">
                            <button type="submit">Edit</button>
                        </form>
                        <form action="/delete-user" , method="POST">
                            <input type="text" hidden value="<%= userData[i].userID %>" name="userID">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                <% } %>
        </table>

        <div class="centered-form">
            <form action="/create-user" method="POST">
                <div class="input-group">
                    <label for="firstName">First name:</label>
                    <input type="text" id="firstName" name="firstName">
                </div>
                <div class="input-group">
                    <label for="lastName">Last name:</label>
                    <input type="text" id="lastName" name="lastName">
                </div>
                <div class="input-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email">
                </div>
                <div class="input-group">
                    <label for="phoneNumber">Phone:</label>
                    <input type="text" id="phoneNumber" name="phoneNumber">
                </div>
                <div class="input-group">
                    <label for="address">Address:</label>
                    <input type="text" id="address" name="address">
                </div>
                <div class="input-group">
                    <label for="avatarLink">Link avatar:</label>
                    <input type="text" id="avatarLink" name="avatarLink">
                </div>
                <div class="input-group">
                    <input type="submit" value="Submit">
                </div>
            </form>
        </div>

    </div>
</body>

</html>